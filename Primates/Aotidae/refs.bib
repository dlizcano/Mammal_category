author = {Montilla, Sebasti{\'{a}}n O and Rios-Soto, Juli{\'{a}}n Alberto and Mantilla-Casta{\~{n}}o, Juan Camilo and Pati{\~{n}}o-Siro, Dahian and Bustamante-Manrique, Sebasti{\'{a}}n and Botero-Henao, Nicol{\'{a}}s and Ruiz, Silvia and Arias-Monsalve, H{\'{e}}ctor Fabio and Link, Andr{\'{e}}s and Ram{\'{i}}rez-Chaves, H{\'{e}}ctor E},
doi = {10.47603/mano.v6n2.183},
journal = {Mammalogy Notes},
month = {sep},
number = {2},
pages = {183},
title = {{Eventos de electrocuci{\'{o}}n de Aotus lemurinus (Primates: Aotidae) en los Andes Centrales de Colombia}},
url = {https://mammalogynotes.org/ojs/index.php/mn/article/view/183},
volume = {6},
year = {2020}
}

