@article{Vargas-Gomez2023,
abstract = {Aotus brumbacki es un primate nocturno end{\'{e}}mico de los Llanos de Colombia. Este es el primer reporte de especies consumidas por A. brumbacki en fragmentos de bosque de dos {\'{a}}reas en los municipios de San Mart{\'{i}}n y Cumaral. Las observaciones fueron realizadas durante un estudio sobre vocalizaciones y densidad otro estudio de densidades y b{\'{u}}squeda de dormitorios. Las familias consumidas por A. brumbacki en zonas fragmentadas que tambi{\'{e}}n son consumidas en zonas continuas son Anacardiacea, Arecaceae, Burseraceae, Melastomataceae, Moraceae y Myrtaceae, con algunas especies en com{\'{u}}n: Socratea exhorriza, Crepidospermum rhoifolium y Pseudolmedia laevis. Cinco especies de plantas de uso humano fueron consumidas por A. brumbacki, este consumo puede estar relacionado con su uso en cultivos y cerca de casas, donde ele primate es observado a menudo por la gente. Esta lista puede ser usada en planes de restauraci{\'{o}}n y para conectar fragmentos de bosque donde la especie a{\'{u}}n persiste.},
author = {Vargas-Gomez, Magda and Gomez-Casta{\~{n}}eda, Francisco Stiven and Ni{\~{n}}o-Moreno, Margarita and Carretero, Xyomara},
doi = {10.47603/mano.v9n2.394},
journal = {Mammalogy Notes},
month = {dec},
number = {2 SE  - Notas - Historia natural},
title = {{Consumo de frutos por parte del mono nocturno end{\'{e}}mico de Brumback (Aotus brumbacki, Primates, Aotidae) en fragmentos de bosque de los Llanos colombianos}},
url = {https://mammalogynotes.org/ojs/index.php/mn/article/view/394},
volume = {9},
year = {2023}
}



